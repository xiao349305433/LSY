<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/item_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/item_param_shape"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/item_blue_sn"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="SN号：NJH124545152155"
                android:textColor="#ff525252"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/item_blue_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAC地址：00:00:00:00:00:00"
                android:textColor="#ff525252"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="激活"
                android:gravity="center"
                android:textColor="#ff525252"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"

                ></TextView>
            <TextView
                android:id="@+id/item_activating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_wuxian"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无线环境"
                android:textColor="#ff525252"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/item_isok"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/item_0k1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>