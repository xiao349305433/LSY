<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_header"
        >


    </ImageView>
    <TextView
        android:id="@+id/login_banben"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        ></TextView>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/login_edit_shape"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_phone"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                ></ImageView>
            <EditText
                android:id="@+id/edit_account"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColorHint="@color/white"
                android:drawablePadding="23dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#00e6e6e6" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/login_edit_shape"
                >


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_yzm"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    ></ImageView>

                <EditText
                    android:id="@+id/edit_yanzhengma"
                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:background="@null"
                    android:drawablePadding="23dp"
                    android:gravity="center_vertical"

                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/text_getyanzhengma"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="获取验证码"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    app:rv_cornerRadius="4dp" />

            </LinearLayout>
            <ImageView
                android:id="@+id/login_img_next"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_enter"></ImageView>
        </LinearLayout>
<!--        </com.flyco.roundview.RoundLinearLayout>-->


    </LinearLayout>


</LinearLayout>