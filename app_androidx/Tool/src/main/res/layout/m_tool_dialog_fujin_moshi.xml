<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="200dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_SN"
            android:textColor="#7a7a7a"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_dangqianmoshi"
            android:textColor="#7a7a7a"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#525252"
            android:id="@+id/text_qiehuanmoshi"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <com.flyco.roundview.RoundTextView
                android:layout_width="44dp"
                android:text="是"
                android:gravity="center"
                android:id="@+id/text_yes"
                app:rv_backgroundColor="@color/l_five_Q"
                android:textColor="@color/base_white"
                app:rv_cornerRadius="5dp"
                android:layout_height="22dp" />
            <com.flyco.roundview.RoundTextView
                android:layout_width="44dp"
                android:text="否"
                android:id="@+id/text_no"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                app:rv_cornerRadius="5dp"
                app:rv_backgroundColor="@color/base_global_neutral_gray_c6c9d4"
                android:textColor="@color/base_white"
                android:layout_height="22dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="蓝牙已连接"
            android:textColor="#525252"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>