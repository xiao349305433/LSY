<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/base_toolbar"/>
    <com.tianditu.android.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="1px"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f0f1f4"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:text="类型"
                android:singleLine="true"
                android:gravity="center"
                android:id="@+id/text_leixing"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/m_repair_open"
                android:drawablePadding="5dp"
                android:textColor="#878787"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1px"
                android:background="@color/base_global_neutral_gray_c6c9d4"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="时间"
                android:padding="10dp"
                android:gravity="center"
                android:id="@+id/text_shijian"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:drawableRight="@drawable/m_repair_open"
                android:drawablePadding="5dp"
                android:textColor="#878787"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1px"
                android:background="@color/base_global_neutral_gray_c6c9d4"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="厂家"
                android:padding="10dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:id="@+id/text_shaixuan"
                android:drawableRight="@drawable/m_repair_open"
                android:drawablePadding="5dp"
                android:textColor="#878787"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1px"
                android:background="@color/base_global_neutral_gray_c6c9d4"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:text="位置"
                android:singleLine="true"
                android:gravity="center"
                android:id="@+id/text_juli"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/m_repair_open"
                android:drawablePadding="5dp"
                android:textColor="#878787"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1px"
                android:background="@color/base_global_neutral_gray_c6c9d4"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="15dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/base_global_neutral_gray_c6c9d4"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="1px"/>
    <met.hx.com.base.basemvp.v.views.RefreshView
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </met.hx.com.base.basemvp.v.views.RefreshView>

</LinearLayout>