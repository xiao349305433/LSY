<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#1a941e23"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">
            <View
                android:background="@color/l_five_Q"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="3dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/round_text_sn"
                android:textColor="@color/l_five_Q"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="140dp"
                android:text="0159117c6BEAE12"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/round_text_moshi"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="A"
                android:singleLine="true"
                android:textSize="13sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/round_text_shijian"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="8天前"
                android:singleLine="true"
                android:textSize="13sp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true"
            android:padding="3dp"
            android:layout_height="wrap_content">
            <com.flyco.roundview.RoundTextView
                android:id="@+id/round_text_jianxiu"
                android:layout_width="57dp"
                app:rv_backgroundColor="@color/l_five_Q"
                android:textColor="@color/base_white"
                android:textSize="13sp"
                android:gravity="center"
                app:rv_cornerRadius="10dp"
                android:layout_gravity="center_vertical"
                android:text="检查"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content" />
            <com.flyco.roundview.RoundTextView
                android:id="@+id/round_text_tihuan"
                android:layout_width="57dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="10dp"
                app:rv_backgroundColor="@color/l_five_Q"
                android:textColor="@color/base_white"
                android:textSize="13sp"
                android:gravity="center"
                app:rv_cornerRadius="10dp"
                android:layout_gravity="center_vertical"
                android:text="替换"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="功率:0dBM"
            android:id="@+id/text_gonglv"
            android:layout_width="75dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="频段:SE470MHz"
            android:id="@+id/text_pinduan"
            android:layout_width="105dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="44dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="发送频率:24h"
            android:id="@+id/text_fasongpinlv"
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/base_global_neutral_gray_c6c9d4"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="SNR:-3.80"
            android:id="@+id/text_snr"
            android:layout_width="75dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="RSSI:-85.00"
            android:id="@+id/text_rssi"
            android:layout_width="105dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="44dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="扩频：SF0"
            android:id="@+id/text_kuopin"
            android:layout_width="87dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/base_global_neutral_gray_c6c9d4"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="产品形式:工业水表"
            android:id="@+id/text_chanpinxingshi"
            android:layout_width="109dp"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="版本：1.0.0"
            android:id="@+id/text_banben"
            android:layout_width="105dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="传感信号:单ev"
            android:id="@+id/text_chuanganxinhao"
            android:layout_width="87dp"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/base_global_neutral_gray_c6c9d4"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#b3f0f4f7"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="华旭大门口"
            android:id="@+id/text_dingwei"
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:drawableLeft="@drawable/m_repair_map"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawablePadding="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/base_global_neutral_gray_c6c9d4"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
</LinearLayout>