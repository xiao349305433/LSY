<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_gongyong"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/m_repair_gray_write"
            android:gravity="center"
            android:text="公用" />

        <TextView
            android:id="@+id/text_jiayong"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/m_repair_gray_gray"
            android:gravity="center"
            android:text="家用" />
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="80dp"
        android:background="@color/base_global_neutral_gray_c6c9d4" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_gongyong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/m_repair_gray_write"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_liuliangji"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="流量计" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/base_global_neutral_gray_c6c9d4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_jiayong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/m_repair_gray_write"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_yuanchuanbiaohao"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="远传表号接入" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/base_global_neutral_gray_c6c9d4" />

            <TextView
                android:id="@+id/text_yuanchuanwulian"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="远传物联网端" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>