<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    app:rv_backgroundColor="@color/base_white"
    app:rv_cornerRadius="5dp">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adaskjdfhfggjkdkjhgjkhj"
        android:textColor="#000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#dfe3e6" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingTop="7dp"
        android:text="确定"
        android:textColor="@color/base_white"
        app:rv_backgroundColor="@color/l_five_Q"
        app:rv_cornerRadius="5dp" />
</com.flyco.roundview.RoundLinearLayout>
