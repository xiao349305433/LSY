<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:scaleType="fitXY"
        android:src="@drawable/banner" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/base_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#7a7a7a"
                android:text="云服务类型:" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/text_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:rv_cornerRadius="10dp"
                    app:rv_backgroundColor="@color/l_five_Q"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/base_white"
                    android:text="水务管理企业" />

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/text_product"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:rv_cornerRadius="10dp"
                    android:layout_marginLeft="20dp"
                    app:rv_backgroundColor="@color/base_global_neutral_gray_c6c9d4"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/base_white"
                    android:text="水务产品企业" />
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bj"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edit_account"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/uers_dl"
                    android:textSize="15sp"
                    android:textColor="@color/base_H"
                    android:hint="账户"
                    android:singleLine="true"
                    android:drawablePadding="23dp"
                    android:background="@null"
                    android:layout_height="36dp" />
                <View
                    android:background="#e6e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edit_password"
                        android:layout_width="276dp"
                        android:textSize="15sp"
                        android:textColor="@color/base_H"
                        android:hint="密码"
                        android:inputType="textPassword"
                        android:drawablePadding="23dp"
                        android:singleLine="true"
                        android:drawableLeft="@drawable/password"
                        android:background="@null"
                        android:layout_height="36dp" />
                    <CheckBox
                        android:id="@+id/check_password"
                        android:layout_width="wrap_content"
                        android:button="@drawable/check_box"
                        android:clickable="true"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:background="#e6e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/check_save_password"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:paddingLeft="8dp"
                    android:textColor="#7a7a7a"
                    android:textSize="15sp"
                    android:checked="false"/>

                <TextView
                    android:id="@+id/text_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:text="忘记密码"
                    android:autoLink="all"
                    android:textColor="@color/l_five_Q" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="欢迎您进入"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/image_button"
                    android:layout_width="wrap_content"
                    android:src="@drawable/logo_button"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="水务世界，请点击图标登录"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:id="@+id/text_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/dsj" />

        </LinearLayout>
        <TextView
            android:id="@+id/text_banben"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>