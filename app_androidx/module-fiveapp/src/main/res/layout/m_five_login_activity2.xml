<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:scaleType="fitXY"
        android:src="@drawable/banner" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#7a7a7a"
                android:text="云服务类型:" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/text_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:rv_cornerRadius="10dp"
                    app:rv_backgroundColor="@color/l_five_Q"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/base_white"
                    android:text="水务管理企业" />

                <com.flyco.roundview.RoundTextView
                    android:visibility="gone"
                    android:id="@+id/text_product"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:rv_cornerRadius="10dp"
                    android:layout_marginLeft="20dp"
                    app:rv_backgroundColor="@color/base_global_neutral_gray_c6c9d4"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/base_white"
                    android:text="水务产品企业" />
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bj"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_login"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_account"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:inputType="number"
                        android:background="@null"
                        android:drawableLeft="@drawable/uers_dl"
                        android:drawablePadding="23dp"
                        android:hint="请输入手机"
                        android:singleLine="true"
                        android:textColor="@color/base_H"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#e6e6e6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edit_yanzhengma"
                            android:layout_width="150dp"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:drawableLeft="@drawable/password"
                            android:drawablePadding="23dp"
                            android:hint="请输入验证码"
                            android:singleLine="true"
                            android:textColor="@color/base_H"
                            android:textSize="15sp" />

                        <com.flyco.roundview.RoundTextView
                            android:id="@+id/text_getyanzhengma"
                            android:layout_width="100dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:padding="8dp"
                            android:text="获取验证码"
                            android:textColor="@color/base_white"
                            app:rv_backgroundColor="@color/l_five_Q"
                            app:rv_cornerRadius="4dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#e6e6e6" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="欢迎您进入"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/image_button"
                        android:layout_width="wrap_content"
                        android:src="@drawable/logo_button"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="水务世界，请点击图标登录"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/text_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/dsj" />

        </LinearLayout>
        <TextView
            android:id="@+id/text_banben"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>