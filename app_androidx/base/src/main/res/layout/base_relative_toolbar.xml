<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/base_relative_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/base_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/base_bg_white"
            android:textSize="15sp" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/base_title_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/base_relative_right"
        android:layout_toEndOf="@+id/base_relative_left">

        <met.hx.com.librarybase.views.MarqueeTextView
            android:id="@+id/base_text_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/base_text_white"
            android:textSize="20dp" />

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/base_relative_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/base_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/base_bg_white"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>