<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/BaseAppTheme.AppBarOverlay">

    <include layout="@layout/base_status_bar"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/base_m_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/BaseAppTheme.PopupOverlay">

        <include layout="@layout/base_relative_toolbar"/>

    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>