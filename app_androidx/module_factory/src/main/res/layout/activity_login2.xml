<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:background="@drawable/ic_banner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="13dp"
            android:text="可 接 入 娄 山 云 物 联 网 基 站"
            android:textColor="#fefeff"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="95dp"
            android:text="出厂配置"
            android:textColor="#fefeff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/text_banben"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="29dp"
            android:layout_marginLeft="68dp"
            android:text="适 配 模 拟 和 数 字 信 号 输 出 的 多 类 计 量 仪 表"
            android:textColor="#fefeff"
            android:textSize="8sp" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="试产登录"
                android:textColor="#3597ff"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:background="#e6e6e6" />

            <TextView
                android:id="@+id/text_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商用登录"
                android:textColor="#999999"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_account"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:inputType="number"
            android:background="@null"
            android:drawableLeft="@drawable/ic_account"
            android:drawablePadding="23dp"
            android:hint="请输入手机"
            android:singleLine="true"
            android:textColor="@color/base_H"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_yanzhengma"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="23dp"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:textColor="@color/base_H"
                android:textSize="15sp" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/text_getyanzhengma"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="8dp"
                android:text="获取验证码"
                android:textColor="@color/base_white"
                app:rv_backgroundColor="@color/base_Q1"
                app:rv_cornerRadius="4dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />
    </LinearLayout>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/text_login"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/base_white"
        android:textSize="14sp"
        app:rv_backgroundColor="#3597ff"
        app:rv_cornerRadius="4dp" />
    <com.flyco.roundview.RoundTextView
        android:id="@+id/text_free_login"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="免密登录"
        android:textColor="@color/base_white"
        android:textSize="14sp"
        app:rv_backgroundColor="#3597ff"
        app:rv_cornerRadius="4dp" />
    <View
        android:layout_width="300dp"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="#e6e6e6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="*未注册的用户，请到娄山云官网PC端进行注册"
        android:textColor="#ff5959"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="www.loushanyun.net"
        android:visibility="gone"
        android:textColor="#d3d2d2"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/text_web"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:src="@drawable/wlw" />

</LinearLayout>