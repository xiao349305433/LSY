        <ImageView
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/logo3"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow" />


