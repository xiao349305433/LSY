<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f4f7"
                android:orientation="vertical">

                <com.flyco.roundview.RoundLinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    app:rv_backgroundColor="@color/base_white"
                    app:rv_cornerRadius="5dp">

                    <TextView
                        android:id="@+id/text_print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="打印机未连接"
                        android:textColor="@color/l_five_Q" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="第一次打印次数:"
                            android:textColor="#525252" />

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:padding="3dp"
                            app:rv_backgroundColor="#f0f4f7"
                            app:rv_cornerRadius="5dp">

                            <EditText
                                android:id="@+id/edit_print_num"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="1" />
                        </com.flyco.roundview.RoundLinearLayout>

                        <com.flyco.roundview.RoundTextView
                            android:id="@+id/text_print_coon"
                            android:layout_width="90dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="打印机连接"
                            android:textColor="#525252"
                            android:textSize="15sp"
                            app:rv_backgroundColor="#f0f4f7"
                            app:rv_cornerRadius="5dp" />


                    </LinearLayout>


                </com.flyco.roundview.RoundLinearLayout>

                <com.flyco.roundview.RoundLinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    app:rv_backgroundColor="@color/base_white"
                    app:rv_cornerRadius="5dp">

                    <TextView
                        android:id="@+id/text_dangqian_sn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="当前未连接SN设备"
                        android:textColor="@color/l_five_Q" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.flyco.roundview.RoundTextView
                            android:id="@+id/bluetooth_conn"
                            android:layout_width="90dp"
                            android:layout_height="28dp"
                            android:gravity="center"
                            android:text="蓝牙重连"
                            android:textColor="#525252"
                            android:textSize="15sp"
                            app:rv_backgroundColor="#f0f4f7"
                            app:rv_cornerRadius="14dp" />

                        <com.flyco.roundview.RoundTextView
                            android:id="@+id/button_dayin"
                            android:layout_width="90dp"
                            android:layout_height="28dp"
                            android:gravity="center"
                            android:text="打印"
                            android:textColor="#525252"
                            android:textSize="15sp"
                            app:rv_backgroundColor="#f0f4f7"
                            app:rv_cornerRadius="14dp" />

                        <com.flyco.roundview.RoundTextView
                            android:id="@+id/bluetooth_disconn"
                            android:layout_width="90dp"
                            android:layout_height="28dp"
                            android:gravity="center"
                            android:text="蓝牙断开"
                            android:textColor="#525252"
                            app:rv_backgroundColor="#f0f4f7"
                            app:rv_cornerRadius="14dp" />
                    </LinearLayout>


                </com.flyco.roundview.RoundLinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.flyco.roundview.RoundLinearLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        app:rv_backgroundColor="@color/base_white"
                        app:rv_cornerRadius="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="第一步：接上传感器配置参数并测试功耗"
                            android:textColor="@color/l_five_Q" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_moshi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="当前设备信道：未读到" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_save_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp" />
                        </LinearLayout>


                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            app:rv_backgroundColor="#ffffff"
                            app:rv_cornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="发送功率:"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <com.flyco.roundview.RoundLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="3dp"
                                app:rv_backgroundColor="#f0f4f7"
                                app:rv_cornerRadius="5dp">

                                <Spinner
                                    android:id="@+id/fasonggonglv_select"
                                    android:layout_width="120dp"
                                    android:layout_height="28dp"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/xindaocanshu"
                                    android:entries="@array/m_chip_xinhaoqiangdu"
                                    android:gravity="center" />
                            </com.flyco.roundview.RoundLinearLayout>


                            <com.flyco.roundview.RoundTextView
                                android:id="@+id/fasonggonglv_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="30dp"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="单独设置"
                                android:textColor="@color/base_white"
                                android:textSize="15sp"
                                app:rv_backgroundColor="@color/l_five_Q"
                                app:rv_cornerRadius="5dp" />
                        </com.flyco.roundview.RoundLinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/base_global_neutral_gray_c6c9d4" />

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            app:rv_backgroundColor="#ffffff"
                            app:rv_cornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="信道设置:"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <com.flyco.roundview.RoundLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="3dp"
                                app:rv_backgroundColor="#f0f4f7"
                                app:rv_cornerRadius="5dp">

                                <Spinner
                                    android:id="@+id/xindaocanshu_select"
                                    android:layout_width="120dp"
                                    android:layout_height="28dp"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/xindaocanshu"
                                    android:entries="@array/m_chip_channel"
                                    android:gravity="center" />
                            </com.flyco.roundview.RoundLinearLayout>


                            <com.flyco.roundview.RoundTextView
                                android:id="@+id/xindaocanshu_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="30dp"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="单独设置"
                                android:textColor="@color/base_white"
                                android:textSize="15sp"
                                app:rv_backgroundColor="@color/l_five_Q"
                                app:rv_cornerRadius="5dp" />
                        </com.flyco.roundview.RoundLinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/base_global_neutral_gray_c6c9d4" />

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            app:rv_backgroundColor="#ffffff"
                            app:rv_cornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="扩频因子:"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <com.flyco.roundview.RoundLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="3dp"
                                app:rv_backgroundColor="#f0f4f7"
                                app:rv_cornerRadius="5dp">

                                <Spinner
                                    android:id="@+id/kuopinyinzi_select"
                                    android:layout_width="120dp"
                                    android:layout_height="28dp"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/xindaocanshu"
                                    android:entries="@array/m_chip_kuopinyinzi"
                                    android:gravity="center" />
                            </com.flyco.roundview.RoundLinearLayout>


                            <com.flyco.roundview.RoundTextView
                                android:id="@+id/kuopinyinzi_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="30dp"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="单独设置"
                                android:textColor="@color/base_white"
                                android:textSize="15sp"
                                app:rv_backgroundColor="@color/l_five_Q"
                                app:rv_cornerRadius="5dp" />
                        </com.flyco.roundview.RoundLinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/base_global_neutral_gray_c6c9d4" />

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            app:rv_backgroundColor="#ffffff"
                            app:rv_cornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="传感信号:"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <com.flyco.roundview.RoundLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="3dp"
                                app:rv_backgroundColor="#f0f4f7"
                                app:rv_cornerRadius="5dp">

                                <Spinner
                                    android:id="@+id/cgxh_select"
                                    android:layout_width="120dp"
                                    android:layout_height="28dp"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/xindaocanshu"
                                    android:entries="@array/m_chip_chuanganleixing"
                                    android:gravity="center" />
                            </com.flyco.roundview.RoundLinearLayout>


                        </com.flyco.roundview.RoundLinearLayout>

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            app:rv_backgroundColor="#ffffff"
                            app:rv_cornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="倍率:"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <com.flyco.roundview.RoundLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="3dp"
                                app:rv_backgroundColor="#f0f4f7"
                                app:rv_cornerRadius="5dp">

                                <Spinner
                                    android:id="@+id/beilv_select"
                                    android:layout_width="110dp"
                                    android:layout_height="28dp"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/xindaocanshu"
                                    android:entries="@array/m_chip_pulseconstant"
                                    android:gravity="center" />

                            </com.flyco.roundview.RoundLinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="初始脉冲(个):"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <com.flyco.roundview.RoundLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:padding="3dp"
                                app:rv_backgroundColor="#f0f4f7"
                                app:rv_cornerRadius="5dp">

                                <EditText
                                    android:id="@+id/edit_maichong_start"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text="5" />
                            </com.flyco.roundview.RoundLinearLayout>

                        </com.flyco.roundview.RoundLinearLayout>

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            app:rv_backgroundColor="#ffffff"
                            app:rv_cornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="设备ID:"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <com.flyco.roundview.RoundLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="3dp"
                                app:rv_backgroundColor="#f0f4f7"
                                app:rv_cornerRadius="5dp">

                                <EditText
                                    android:id="@+id/edit_id_start"
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:gravity="center"
                                    android:inputType="number" />

                            </com.flyco.roundview.RoundLinearLayout>

                            <com.flyco.roundview.RoundTextView
                                android:id="@+id/round_create_id"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="生成ID"
                                android:textColor="@color/base_white"
                                android:textSize="15sp"
                                app:rv_backgroundColor="@color/l_five_Q"
                                app:rv_cornerRadius="5dp" />
                        </com.flyco.roundview.RoundLinearLayout>

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            app:rv_backgroundColor="#ffffff"
                            app:rv_cornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="厂家标识:"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <com.flyco.roundview.RoundLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="3dp"
                                app:rv_backgroundColor="#f0f4f7"
                                app:rv_cornerRadius="5dp">

                                <EditText
                                    android:id="@+id/edit_factory_id"
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text="98" />

                            </com.flyco.roundview.RoundLinearLayout>

                        </com.flyco.roundview.RoundLinearLayout>

                        <com.flyco.roundview.RoundTextView
                            android:id="@+id/maichong_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="一键设置"
                            android:textColor="@color/base_white"
                            android:textSize="15sp"
                            app:rv_backgroundColor="@color/l_five_Q"
                            app:rv_cornerRadius="5dp" />
                    </com.flyco.roundview.RoundLinearLayout>

                    <ImageView
                        android:id="@+id/system_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="20dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/l_loushanyun_active_enable"
                        android:visibility="gone" />
                </FrameLayout>


                <com.flyco.roundview.RoundLinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    app:rv_backgroundColor="@color/base_white"
                    app:rv_cornerRadius="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="第二步：贴上标签，盖上盖，定义合格标准并强制发送(最多3次，如果都不合格说明天线焊接有问题)"
                        android:textColor="@color/l_five_Q" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="信号强度(合格区间):" />

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="3dp"
                            app:rv_backgroundColor="#f0f4f7"
                            app:rv_cornerRadius="5dp">

                            <EditText
                                android:id="@+id/edit_xinhaoqiangdu_start"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:gravity="center"
                                android:text="-90" />
                        </com.flyco.roundview.RoundLinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="-" />

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:padding="3dp"
                            app:rv_backgroundColor="#f0f4f7"
                            app:rv_cornerRadius="5dp">

                            <EditText
                                android:id="@+id/edit_xinhaoqiangdu_end"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:gravity="center"
                                android:text="127" />
                        </com.flyco.roundview.RoundLinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="信噪比(合格区间):" />

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="3dp"
                            app:rv_backgroundColor="#f0f4f7"
                            app:rv_cornerRadius="5dp">

                            <EditText
                                android:id="@+id/edit_xinzaobi_start"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:gravity="center"
                                android:text="0" />
                        </com.flyco.roundview.RoundLinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="-" />

                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
