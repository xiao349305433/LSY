<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/l_loushanyun_chip_Q"
        android:layout_height="180dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="模组生产测试"
            android:textColor="@color/white"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/text_banben"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试登录"
                android:textColor="#3597ff"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:background="#e6e6e6" />

            <TextView
                android:id="@+id/text_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商用登录"
                android:textColor="#999999"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_account"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@null"
            android:drawableLeft="@drawable/m_chip_ic_account"
            android:drawablePadding="23dp"
            android:hint="请输入手机"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/base_H"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_yanzhengma"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:background="@null"
                android:drawableLeft="@drawable/m_chip_ic_password"
                android:drawablePadding="23dp"
                android:hint="请输入验证码"

                android:singleLine="true"
                android:textColor="@color/base_H"
                android:textSize="15sp" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/text_getyanzhengma"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="获取验证码"
                android:textColor="@color/base_white"
                app:rv_backgroundColor="@color/l_loushanyun_chip_Q"
                app:rv_cornerRadius="4dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />
    </LinearLayout>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/text_login"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/base_white"
        android:textSize="14sp"
        app:rv_backgroundColor="@color/l_loushanyun_chip_Q"
        app:rv_cornerRadius="4dp" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/text_free_login"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="免密登录"
        android:textColor="@color/base_white"
        android:textSize="14sp"
        app:rv_backgroundColor="@color/l_loushanyun_chip_Q"
        app:rv_cornerRadius="4dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="#e6e6e6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="*未注册的用户，请到娄山云官网PC端进行注册"
        android:textColor="@color/l_loushanyun_chip_Q"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="www.loushanyun.net"
        android:textColor="#d3d2d2"
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>